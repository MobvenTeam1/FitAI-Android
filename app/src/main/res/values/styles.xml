<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="darkButtonStyle">
        <item name="android:background">@drawable/dark_background</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="lightButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editText">
        <item name="android:background">@drawable/white_background_edit_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/cyan_blue</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
    </style>

    <style name="Button4">
        <item name="cornerSize">20%</item>
    </style>

    <style name="otpBoxStyle">
        <item name="android:background">@drawable/bg_grey_stroke</item>
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textSize">@dimen/_22sp</item>
    </style>
</resources>