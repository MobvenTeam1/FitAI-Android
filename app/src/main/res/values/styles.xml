<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="darkButtonStyle">
        <item name="android:background">@drawable/dark_background</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="lightButtonStyle">
        <item name="android:background">@drawable/white_background</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="editTextLayoutStyleInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_24dp</item>
        <item name="android:textColorHint">"@color/light_grey_4"</item>
        <item name="android:layout_marginEnd">@dimen/_24dp</item>
        <item name="android:layout_marginTop">@dimen/_16dp</item>
        <item name="android:layout_marginBottom">@dimen/_16dp</item>
    </style>

    <style name="textInputEditTextStyleInfo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:maxLines">3</item>
        <item name="android:inputType">text</item>
        <item name="android:paddingBottom">@dimen/_48dp</item>
    </style>

    <style name="titleTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_24dp</item>
        <item name="android:layout_marginEnd">@dimen/_24dp</item>
        <item name="android:layout_marginTop">@dimen/_8dp</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:maxEms">10</item>
        <item name="android:textSize">@dimen/_30sp</item>
    </style>

    <style name="mainConstraintLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="recyclerViewPreferencesStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_0dp</item>
        <item name="android:layout_marginBottom">@dimen/_24dp</item>
        <item name="android:layout_marginStart">@dimen/_24dp</item>
        <item name="android:layout_marginTop">@dimen/_32dp</item>
        <item name="android:layout_marginEnd">@dimen/_32dp</item>
    </style>

    <style name="nextButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/_48sp</item>
        <item name="android:backgroundTint">@color/main_grey</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:paddingTop">@dimen/_16dp</item>
        <item name="android:paddingBottom">@dimen/_16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="birthdayDayMonthStyle">
        <item name="android:background">@drawable/bg_grey_stroke</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_12dp</item>
        <item name="android:layout_marginTop">@dimen/_24dp</item>
        <item name="fontFamily">@font/urbanist_bold</item>
        <item name="android:layout_below">@id/birthday_title</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxEms">10</item>
        <item name="android:padding">@dimen/_20dp</item>
        <item name="android:textSize">@dimen/_22sp</item>
    </style>

    <style name="radioGroupStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/_30dp</item>
        <item name="android:background">@drawable/bg_radio_group</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_margin">@dimen/_24dp</item>
    </style>

    <style name="radioButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_radio_button</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/urbanist_semibold</item>
        <item name="android:textColor">@drawable/selector_radio_text_color</item>
    </style>

    <style name="textViewPersonalInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/_4dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">3</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/_48sp</item>
    </style>

    <style name="textViewPersonalInfoUnitStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginBottom">@dimen/_4dp</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textColor">@color/main_grey</item>
        <item name="android:textSize">@dimen/_20sp</item>
    </style>

    <style name="editTextPersonalInfoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
    </style>

    <style name="nextButtonOnBoardingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@id/btn_onboarding_3_skip</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_marginBottom">@dimen/_8dp</item>
        <item name="android:backgroundTint">@color/main_grey</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:text">@string/sonraki</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:paddingTop">@dimen/_18dp</item>
        <item name="android:paddingBottom">@dimen/_18dp</item>
    </style>

    <style name="skipButtonOnBoardingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/_24dp</item>
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:ems">5</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:text">@string/atla</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="imageViewOnBoardingStyle">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">@dimen/_0dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>


    <style name="onBoardingTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:layout_marginBottom">@dimen/_16dp</item>
        <item name="android:textSize">@dimen/_32sp</item>
    </style>

    <style name="onBoardingDescriptionStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:layout_marginStart">@dimen/horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/horizontal_margin</item>
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:layout_marginBottom">@dimen/_30sp</item>
    </style>

</resources>