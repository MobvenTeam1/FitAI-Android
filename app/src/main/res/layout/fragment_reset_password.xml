<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ResetPasswordFragment">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/yeniParolaOlustur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/create_new_password"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintTop_toBottomOf="@id/guidelineHorizontalTop" />

    <TextView
        android:id="@+id/yeniParolaOlusturBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/urbanist_regular"
        android:text="@string/create_new_password_bottom"
        android:textColor="@color/lightGray"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintTop_toBottomOf="@id/yeniParolaOlustur"
        android:layout_marginTop="@dimen/_10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/resetPassword"
        android:hint="@string/password"
        android:layout_width="0dp"
        android:layout_height="65dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:shapeAppearanceOverlay="@style/Button4"
        app:boxStrokeColor="@color/black"
        android:textColorHint="@color/lightGray"
        app:boxStrokeWidth="1dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/yeniParolaOlusturBottom"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"
        android:layout_marginTop="32dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPassword"
            android:ems="10"
            android:fontFamily="@font/urbanist_semibold"
            android:textSize="15sp"
            android:textColorHint="@color/black"
            android:textColor="@color/lightGray"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/resetPasswordConfirm"
        android:hint="@string/password_confirm"
        android:layout_width="0dp"
        android:layout_height="65dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:shapeAppearanceOverlay="@style/Button4"
        app:boxStrokeColor="@color/black"
        android:textColorHint="@color/lightGray"
        app:boxStrokeWidth="1dp"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/lightGray"
        app:layout_constraintTop_toBottomOf="@id/resetPassword"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"
        android:layout_marginTop="12dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:inputType="textPassword"
            android:ems="10"
            android:fontFamily="@font/urbanist_semibold"
            android:textSize="15sp"
            android:textColorHint="@color/black"
            android:textColor="@color/lightGray"
            android:textStyle="normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButton"
        style="@style/darkButtonStyle"
        android:layout_width="0dp"
        android:layout_height="55dp"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"
        app:layout_constraintTop_toBottomOf="@id/resetPasswordConfirm"
        android:text="@string/reset_password"
        android:layout_marginTop="27dp"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerticalLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerticalRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontalTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100dp" />


</androidx.constraintlayout.widget.ConstraintLayout>