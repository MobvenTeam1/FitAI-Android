<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.sign_up.BirthdaySignUpFragment">

    <TextView
        android:id="@+id/birthday_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_28dp"
        android:fontFamily="@font/urbanist_bold"
        android:layout_alignParentTop="true"
        android:text="@string/what_is_your_weight_goal"
        android:textSize="@dimen/_30sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_birthday"
        android:layout_width="wrap_content"
        android:fontFamily="@font/urbanist_bold"
        android:maxLength="10"
        android:maxLines="1"
        android:focusable="false"
        android:gravity="center"
        android:hint="@string/enter_birthday"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:foregroundGravity="center_vertical"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginTop="@dimen/_64dp"
        android:textSize="@dimen/_36sp"
        android:background="@color/white"
        android:layout_below="@id/birthday_title"
        android:layout_height="wrap_content" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_birthday_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:backgroundTint="@color/main_grey"
        android:fontFamily="@font/urbanist_bold"
        android:layout_marginBottom="@dimen/_64dp"
        android:paddingVertical="@dimen/_16dp"
        android:text="@string/sonraki"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        app:cornerRadius="@dimen/button_corner_radius"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>