<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.sign_in.OTPFragment">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginTop="25dp"
        android:contentDescription="@string/contentDescription"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dogrulama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/verification"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintTop_toBottomOf="@id/guidelineHorizontalTop" />

    <TextView
        android:id="@+id/tvOtpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otp_email"
        android:textSize="18sp"
        android:fontFamily="@font/urbanist_regular"
        android:textColor="@color/lightGray"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintTop_toBottomOf="@id/dogrulama"
        android:layout_marginTop="@dimen/_10dp"
        />

    <EditText
        android:id="@+id/etOtpBox"
        style="@style/otpBoxStyle"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/_32dp"
        android:autofillHints="number"
        android:hint="@string/blank"
        android:textColorHint="@color/white"
        android:maxEms="10"
        android:background="@drawable/bg_empty_otp"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@id/etOtpBox2"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintTop_toBottomOf="@id/tvOtpEmail"
        tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/etOtpBox2"
        style="@style/otpBoxStyle"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/_32dp"
        android:autofillHints="number"
        android:hint="@string/blank"
        android:maxEms="10"
        android:background="@drawable/bg_empty_otp"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toStartOf="@id/etOtpBox3"
        app:layout_constraintStart_toEndOf="@id/etOtpBox"
        app:layout_constraintTop_toBottomOf="@id/tvOtpEmail" />

    <EditText
        android:id="@+id/etOtpBox3"
        style="@style/otpBoxStyle"
        android:layout_width="70dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/tvOtpEmail"
        app:layout_constraintStart_toEndOf="@id/etOtpBox2"
        app:layout_constraintEnd_toStartOf="@id/etOtpBox4"
        android:layout_marginTop="@dimen/_32dp"
        android:autofillHints="number"
        android:hint="@string/blank"
        android:background="@drawable/bg_empty_otp"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:maxEms="10" />

    <EditText
        android:id="@+id/etOtpBox4"
        style="@style/otpBoxStyle"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_marginTop="@dimen/_32dp"
        android:autofillHints="number"
        android:hint="@string/blank"
        android:maxEms="10"
        android:textAlignment="center"
        android:background="@drawable/bg_empty_otp"
        android:textColorHint="@color/white"
        app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"
        app:layout_constraintStart_toEndOf="@id/etOtpBox3"
        app:layout_constraintTop_toBottomOf="@id/tvOtpEmail" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/etOtpBox2"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"
        android:text="@string/timer"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tvKodAlmadinizMi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintTop_toBottomOf="@id/tvTimer"
        app:layout_constraintStart_toStartOf="@id/guidelineVerticalLeft"
        app:layout_constraintEnd_toStartOf="@id/tvTekrarGonder"
        android:text="@string/didnt_you_get_a_code"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_4dp"/>

    <TextView
        android:id="@+id/tvTekrarGonder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semi_bold"
        app:layout_constraintTop_toBottomOf="@id/tvTimer"
        app:layout_constraintStart_toEndOf="@id/tvKodAlmadinizMi"
        app:layout_constraintEnd_toEndOf="@id/guidelineVerticalRight"
        android:text="@string/resend_code"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="@dimen/_4dp"/>





    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerticalLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVerticalRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="24dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHorizontalTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="100dp" />


</androidx.constraintlayout.widget.ConstraintLayout>