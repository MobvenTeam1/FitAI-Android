<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.sign_up.GoalSignUpFragment">

    <TextView
        android:id="@+id/weight_goal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_28dp"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/what_is_your_weight_goal"
        android:textSize="@dimen/_30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_48sp"
        android:gravity="center"
        android:layout_below="@id/weight_goal_title"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_weight_goal"
            android:layout_width="wrap_content"
            android:fontFamily="@font/urbanist_bold"
            android:maxLength="3"
            android:maxLines="1"
            android:hint="@string/goal"
            android:textSize="@dimen/_48sp"
            android:inputType="numberDecimal"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kg"
            android:fontFamily="@font/poppins_regular"
            android:textSize="@dimen/_20sp"
            android:layout_gravity="bottom"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_weight_goal_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:backgroundTint="@color/main_grey"
        android:fontFamily="@font/urbanist_bold"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_64dp"
        android:paddingVertical="@dimen/_16dp"
        android:text="@string/sonraki"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        app:cornerRadius="@dimen/button_corner_radius" />

</RelativeLayout>