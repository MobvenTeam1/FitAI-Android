<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.screens.FourthOnboardingFragment">

    <ImageView
        android:id="@+id/iv_onboarding_4"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/onboarding_4" />

    <TextView
        android:id="@+id/tv_onboarding_4_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_onboarding_4_title"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/onboarding_title_4"
        android:layout_marginBottom="@dimen/_16dp"
        android:textSize="@dimen/_32sp" />

    <TextView
        android:id="@+id/tv_onboarding_4_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:fontFamily="@font/urbanist_regular"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:text="@string/onboarding_description_4"
        android:layout_above="@id/btn_onboarding_4_continue"
        android:textSize="@dimen/_16sp"
        android:layout_marginBottom="@dimen/_30dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_onboarding_4_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_onboarding_4_skip"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:layout_marginBottom="@dimen/_8dp"
        android:backgroundTint="@color/main_grey"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/sonraki"
        android:textColor="@color/white"
        android:paddingVertical="@dimen/_18dp"
        android:textSize="@dimen/_16sp"
        app:cornerRadius="@dimen/button_corner_radius" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_onboarding_4_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/_24dp"
        android:backgroundTint="@color/transparent"
        android:ems="5"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/atla"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sp"
        app:cornerRadius="@dimen/button_corner_radius" />

</RelativeLayout>