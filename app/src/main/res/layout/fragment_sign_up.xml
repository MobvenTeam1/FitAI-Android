<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.sign_up.screens.SignUpFragment">

    <include
        android:id="@+id/toolbar_sign_up"
        layout="@layout/toolbar_sign_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sign_up_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24dp"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/sign_up_title"
        android:textSize="@dimen/_30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_sign_up" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_nickname_sign_up"
        style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginTop="@dimen/_16dp"
        app:boxBackgroundColor="@color/light_grey_2"
        app:boxStrokeColor="@color/light_grey_2"
        app:boxStrokeWidth="@dimen/_1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_up_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_nickname_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="@font/urbanist_regular"
            android:hint="@string/nickname"
            android:inputType="text" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_email_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginTop="@dimen/_12dp"
        app:boxBackgroundColor="@color/light_grey_2"
        app:boxStrokeColor="@color/light_grey_2"
        app:boxStrokeWidth="@dimen/_1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_nickname_sign_up">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_email_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/urbanist_regular"
            android:maxLines="1"
            android:hint="@string/email"
            android:inputType="textEmailAddress" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_password_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginTop="@dimen/_12dp"
        app:boxBackgroundColor="@color/light_grey_2"
        app:boxStrokeColor="@color/light_grey_2"
        app:boxStrokeWidth="@dimen/_1dp"
        app:endIconDrawable="@drawable/fluent_eye_filled"
        app:endIconMode="custom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_email_sign_up">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_password_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="@font/urbanist_regular"
            android:hint="@string/password" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_password_again_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginTop="@dimen/_12dp"
        app:boxBackgroundColor="@color/light_grey_2"
        app:boxStrokeColor="@color/light_grey_2"
        app:boxStrokeWidth="@dimen/_1dp"
        app:endIconDrawable="@drawable/fluent_eye_filled"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_password_sign_up">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_text_password_again_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="@font/urbanist_regular"
            android:hint="@string/password_again"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/sign_up_terms_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_12dp"
        android:button="@drawable/custom_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_password_again_sign_up" />

    <TextView
        android:id="@+id/tv_terms_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8dp"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/terms"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/_14sp"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_terms_checkbox"
        app:layout_constraintStart_toEndOf="@id/sign_up_terms_checkbox"
        app:layout_constraintTop_toTopOf="@id/sign_up_terms_checkbox"
        app:layout_constraintVertical_bias="0.517" />

    <TextView
        android:id="@+id/tv_and_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/urbanist_regular"
        android:text="@string/and"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/_14sp"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_terms_checkbox"
        app:layout_constraintStart_toEndOf="@id/tv_terms_sign_up"
        app:layout_constraintTop_toTopOf="@id/sign_up_terms_checkbox" />

    <TextView
        android:id="@+id/tv_conditions_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/conditions"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/_14sp"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_terms_checkbox"
        app:layout_constraintStart_toEndOf="@id/tv_and_sign_up"
        app:layout_constraintTop_toTopOf="@id/sign_up_terms_checkbox" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/urbanist_regular"
        android:text="@string/accept"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/_14sp"
        app:layout_constraintBottom_toBottomOf="@id/sign_up_terms_checkbox"
        app:layout_constraintStart_toEndOf="@id/tv_conditions_sign_up"
        app:layout_constraintTop_toTopOf="@id/sign_up_terms_checkbox" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sign_up_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/_24dp"
        android:backgroundTint="@color/main_grey"
        android:fontFamily="@font/urbanist_bold"
        android:paddingVertical="@dimen/_16dp"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sp"
        app:cornerRadius="@dimen/button_corner_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_conditions_sign_up" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_sign_up_left"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_1dp"
        android:layout_marginStart="@dimen/_24dp"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_marginEnd="@dimen/_12dp"
        app:dividerColor="@color/light_grey"
        app:layout_constraintEnd_toStartOf="@id/tv_or_register_with"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_up_continue" />

    <TextView
        android:id="@+id/tv_or_register_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/or_register_with"
        android:textSize="@dimen/_14sp"
        android:textColor="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="@id/divider_sign_up_right"
        app:layout_constraintEnd_toStartOf="@id/divider_sign_up_right"
        app:layout_constraintStart_toEndOf="@id/divider_sign_up_left"
        app:layout_constraintTop_toTopOf="@id/divider_sign_up_left" />

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider_sign_up_right"
        android:layout_width="0dp"
        android:layout_height="@dimen/_1dp"
        android:layout_marginStart="@dimen/_12dp"
        android:layout_marginTop="@dimen/_30dp"
        android:layout_marginEnd="@dimen/_24dp"
        app:dividerColor="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_or_register_with"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_up_continue" />

    <ImageButton
        android:id="@+id/btn_sign_up_facebook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_24dp"
        android:background="@drawable/bg_grey_stroke"
        android:contentDescription="@string/facebook_register_button"
        android:paddingHorizontal="@dimen/_8dp"
        android:paddingVertical="@dimen/_10dp"
        android:src="@drawable/facebook_icon"
        app:layout_constraintBottom_toBottomOf="@id/btn_sign_up_google"
        app:layout_constraintEnd_toStartOf="@id/btn_sign_up_google"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_sign_up_google" />

    <ImageButton
        android:id="@+id/btn_sign_up_google"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:layout_marginHorizontal="@dimen/_24dp"
        android:layout_marginTop="@dimen/_24dp"
        android:layout_marginBottom="@dimen/_18dp"
        android:background="@drawable/bg_grey_stroke"
        android:contentDescription="@string/google_register_button"
        android:paddingHorizontal="@dimen/_8dp"
        android:paddingVertical="@dimen/_10dp"
        android:src="@drawable/google_icon"
        app:layout_constraintBottom_toTopOf="@id/tv_do_you_have_already_account"
        app:layout_constraintEnd_toStartOf="@id/btn_sign_up_apple"
        app:layout_constraintStart_toEndOf="@id/btn_sign_up_facebook"
        app:layout_constraintTop_toBottomOf="@id/divider_sign_up_left" />

    <ImageButton
        android:id="@+id/btn_sign_up_apple"
        android:layout_width="@dimen/_0dp"
        android:layout_height="@dimen/_0dp"
        android:layout_marginEnd="@dimen/_24dp"
        android:background="@drawable/bg_grey_stroke"
        android:contentDescription="@string/apple_register_button"
        android:paddingHorizontal="@dimen/_8dp"
        android:paddingVertical="@dimen/_10dp"
        android:src="@drawable/apple_logo"
        app:layout_constraintBottom_toBottomOf="@id/btn_sign_up_google"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_sign_up_google"
        app:layout_constraintTop_toTopOf="@id/btn_sign_up_google" />

    <TextView
        android:id="@+id/tv_do_you_have_already_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_8dp"
        android:fontFamily="@font/urbanist_regular"
        android:text="@string/zaten_hesab_n_z_var_m"
        android:textSize="@dimen/_16sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_login_sign_up"
        app:layout_constraintEnd_toStartOf="@+id/tv_login_sign_up"
        app:layout_constraintTop_toTopOf="@id/tv_login_sign_up" />

    <TextView
        android:id="@+id/tv_login_sign_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/urbanist_bold"
        android:text="@string/login"
        android:textSize="@dimen/_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_sign_up_google"
        app:layout_constraintTop_toBottomOf="@id/btn_sign_up_google" />

</androidx.constraintlayout.widget.ConstraintLayout>